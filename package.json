{
  "name": "talent-match2.0",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "docker compose --env-file .env up -d --build",
    "start:dev": "docker compose --env-file .env -f docker-compose.yml up --build",
    "restart": "docker compose --env-file .env up --force-recreate --build -d",
    "stop": "docker compose --env-file .env stop",
    "clean": "docker compose --env-file .env down -v",
    "test": "node_modules/.bin/jest",
    "dev": "ts-node -r tsconfig-paths/register ./src/bin/www.ts",
    "build": "tsc && tsc-alias",
    "start:prod": "node dist/src/bin/www.js",
    "init:schema": "typeorm schema:sync -d ./dist/db/data-source.js",
    "db:seed": "ts-node -r tsconfig-paths/register ./src/scripts/seed-database.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-style": "npm run format && npm run lint:fix"
  },
  "dependencies": {
    "@types/joi": "^17.2.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.0.2",
    "formidable": "^3.5.2",
    "http-status-codes": "^2.3.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.2",
    "@types/pino-http": "^6.1.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
